<% layout("/layouts/bolierplate.ejs") %>

<body>

<div class="container mt-5 d-flex justify-content-center">

    <form action="/emails/" method="post" class="w-100" style="max-width: 650px;">

        <div class="card shadow-sm border-0 p-4 rounded-4">

            <h2 class="fw-bold mb-4 text-center">Compose Email</h2>

            <!-- FROM -->
            <div class="mb-3">
                <label for="from" class="form-label fw-semibold">From</label>
                <input type="email" 
                       class="form-control rounded-3" 
                       id="from" 
                       placeholder="name@example.com" 
                       name="email[from]" 
                       required>
            </div>

            <!-- TO -->
            <div class="mb-3">
                <label for="to" class="form-label fw-semibold">To</label>
                <input type="email" 
                       class="form-control rounded-3" 
                       id="to" 
                       placeholder="recipient@example.com" 
                       name="email[to]" 
                       required>
            </div>

            <!-- SUBJECT -->
            <div class="mb-3">
                <label for="subject" class="form-label fw-semibold">Subject</label>
                <input type="text" 
                       class="form-control rounded-3" 
                       id="subject" 
                       placeholder="Email subject" 
                       name="email[subject]" 
                       required>
            </div>

            <!-- BODY -->
            <div class="mb-3">
                <label for="body" class="form-label fw-semibold">Body</label>
                <textarea class="form-control rounded-3" 
                          id="body" 
                          rows="6" 
                          placeholder="Write your message here..."
                          name="email[body]" 
                          required></textarea>
            </div>

            <!-- SUBMIT BUTTON -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-4 py-2 rounded-3 fw-semibold">
                    Send Email
                </button>
            </div>

        </div>

    </form>

</div>

</body>
