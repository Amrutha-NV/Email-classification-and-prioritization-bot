<% layout("/layouts/bolierplate.ejs") %>

    <body>
        <form action="/emails/" method="post">
            <div class="compose-container">
                <h1>Compose</h1>
                <div class="mb-3">
                    <label for="from" class="form-label">From</label>
                    <input type="email" class="form-control" id="from" placeholder="name@example.com" name="email[from]" required>
                </div>

                <div class="mb-3">
                    <label for="to" class="form-label">To</label>
                    <input type="email" class="form-control" id="to" placeholder="name@example.com" name="email[to]" required>
                </div>

                <div class="mb-3">
                    <label for="subject" class="form-label">Subject</label>
                    <input type="text" class="form-control" id="to" placeholder="subject" name="email[subject]" required>
                </div>

                <div class="mb-3">
                    <label for="body" class="form-label">Body</label>
                    <textarea class="form-control" id="body" rows="5" name="email[body]" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>

            </div>

        </form>




    </body>