<% layout("layouts/bolierplate.ejs") %>

<body>

<div class="container mt-4 d-flex justify-content-center">

    <div class="compose-container w-100" style="max-width: 700px;">

        <h1 class="fw-bold mb-4 text-center">Edit Draft</h1>

        <!-- UPDATE FORM -->
        <form action="/draft/<%= draft._id %>?_method=PUT" method="POST">

            <!-- FROM -->
            <div class="mb-3">
                <label class="form-label fw-semibold">From</label>
                <input type="email"
                       class="form-control rounded-3"
                       value="<%= draft.originalEmail?.from %>"
                       readonly>
            </div>

            <!-- TO -->
            <div class="mb-3">
                <label class="form-label fw-semibold">To</label>
                <input type="email"
                       class="form-control rounded-3"
                       value="<%= draft.originalEmail?.to %>"
                       readonly>
            </div>

            <!-- SUBJECT -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Subject</label>
                <input type="text"
                       class="form-control rounded-3"
                       name="subject"
                       value="<%= draft.originalEmail?.subject %>">
            </div>

            <!-- BODY -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Draft Body</label>
                <textarea class="form-control rounded-3"
                          name="draftBody"
                          rows="7"><%= draft.draftBody %></textarea>
            </div>

            <!-- STATUS BADGE -->
            <div class="mb-3">
                <% if (draft.status === "pending") { %>
                    <span class="badge rounded-pill text-bg-warning px-3 py-2">Pending</span>
                <% } else if (draft.status === "edited") { %>
                    <span class="badge rounded-pill text-bg-primary px-3 py-2">Edited</span>
                <% } else if (draft.status === "sent") { %>
                    <span class="badge rounded-pill text-bg-success px-3 py-2">Sent</span>
                <% } else { %>
                    <span class="badge rounded-pill text-bg-dark px-3 py-2"><%= draft.status %></span>
                <% } %>
            </div>

            <!-- INLINE BUTTONS -->
            <div class="d-flex gap-3 mt-4">

                <button type="submit" class="btn btn-primary px-4 py-2 rounded-3">
                    Save
                </button>

        </form>

        <form action="/draft/<%= draft._id %>/send" method="POST">
            <button class="btn btn-success px-4 py-2 rounded-3">
                Send
            </button>
        </form>

        <form action="/draft/<%= draft._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger px-4 py-2 rounded-3">
                Delete
            </button>
        </form>

        </div>

    </div>

</div>

</body>
